{
  "npm" : false,
  "git": {
    "requireUpstream": false,
    "requireCleanWorkingDir": false,
    "commitMessage": "Release ${version} [ci skip]"
  },
  "github": {
    "assets": {
      "files": "wirecardpaymentgateway.zip"
    },
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "eslint",
      "infile": "CHANGELOG.md"
    },
    "@release-it/bumper": {
      "in": { "file": "wirecardpaymentgateway/VERSION", "type": "text/plain" },
      "out": { "file": "wirecardpaymentgateway/VERSION", "type": "text/plain" }
    }
  },
  "hooks": {
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}.",
    "before:init": "bash .bin/generate-release-package.sh"
  }
}
